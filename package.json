{
  "name": "komment",
  "version": "1.0.0",
  "description": "A collaborative commenting tool for web applications - perfect for design reviews and feedback",
  "type": "module",
  "main": "./dist/komment.umd.cjs",
  "module": "./dist/komment.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/komment.js",
      "require": "./dist/komment.umd.cjs"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist",
    "server"
  ],
  "scripts": {
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "server": "node server/index.js",
    "dev": "concurrently \"vite\" \"npm run server\""
  },
  "keywords": [
    "vue",
    "vue3",
    "comments",
    "feedback",
    "collaboration",
    "design-review",
    "typescript",
    "tailwindcss"
  ],
  "author": {
    "name": "Ryan Weber Ltd",
    "url": "https://ryan-weber.com"
  },
  "license": "MIT",
  "peerDependencies": {
    "vue": "^3.5.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.17",
    "@types/node": "^22.0.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.0",
    "glob": "^11.0.3",
    "postcss": "^8.4.47",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.6.0",
    "vite": "^6.0.0",
    "vite-plugin-dts": "^4.0.0",
    "vue": "^3.5.0",
    "vue-tsc": "^2.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.0"
  }
}
